<h1>Welcome to Ember Quiz!</h1>

<p>Below are all the questions already created. From here you can edit or delete the questions.</p>
<p>If you want to create a new questions or take the quiz, use the buttons above.</p>

<!-- Edit Question Modal -->
<div class=" myModal modal-hide " {{action "closeModal" "editQuestionModal"}} id="editQuestionModal">
  <div class="dialog">
    <div class="content">
      <div class="header text-center">
        <h1>Edit This Question</h1>
      </div>
      <div class="body text-center">
        <h2>edit ID:{{deleteID}}</h2>
      {{edit-question-form deleteID=deleteID }}
      </div>
      <div class="footer">
        <button class="btn btn-success" {{action "closeModal" "editQuestionModal"}}>Cancel</button>
        <button class="btn btn-danger" {{action "deleteQuestion" }}>Save It</button>
      </div>
    </div>
  </div>
</div>
<!-- Delete Question Modal -->
<div class=" myModal modal-hide " {{action "closeModal" "deleteQuestionModal"}} id="deleteQuestionModal">
  <div class="dialog">
    <div class="content">
      <div class="header text-center">
        <h1>Are you sure you want to delete this question?</h1>
      </div>
      <div class="body text-center">
        <h2></h2>

      </div>
      <div class="footer">
        <button class="btn btn-success" {{action "closeModal" "deleteQuestionModal"}}>Cancel</button>
        <button class="btn btn-danger" {{action "deleteQuestion" }}>Delete It</button>
      </div>
    </div>
  </div>
</div>
<!-- Question -->
{{#each model as |model|}}

<div class="card-container container">
  <div class="card">
    <div class="card-body bg-primary text-white">
      <p class="quiz-text">{{model.text}}</p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item  " id="A"
        {{action "selectAnswer" model.id }}>A: {{model.answerA}}</li>
      <li class="list-group-item  {{if selectedB "border border-info bg-light font-weight-bold"}}" id="B"
        {{action "selectAnswer" model.id }}>B: {{model.answerB}}</li>
      <li class="list-group-item  {{if selectedC "border border-info bg-light font-weight-bold"}}" id="C"
        {{action "selectAnswer" model.id }}>C: {{model.answerC}}</li>
      <li class="list-group-item  {{if selectedD "border border-info bg-light font-weight-bold"}}" id="D"
        {{action "selectAnswer" model.id }}>D: {{model.answerD}}</li>
    </ul>

  </div>
  
  {{#link-to 'edit' model.id}}
  <button class="btn btn-success btn-lg mt-3" >Edit</button>
  {{/link-to}}
  <button class="btn btn-danger btn-lg mt-3" {{action "confirmDelete" model.id }}>Delete</button>


</div>
{{/each}}
